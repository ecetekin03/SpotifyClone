<Window x:Class="MusicPlayerClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="MusicPlayer Login"
        Height="550"
        Width="900"
        Background="#121212">

    <Border CornerRadius="20" BorderThickness="1" BorderBrush="#1DB954" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="160"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Gradient üst alan -->
            <Border Grid.Row="0" CornerRadius="20,20,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#1DB954" />
                        <GradientStop Offset="1" Color="#8A2BE2" />
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="Hoş Geldiniz"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </Border>

            <!-- Giriş alanı -->
            <Border Grid.Row="1" Background="#181818" CornerRadius="0,0,20,20">
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Giriş Yap"
                               FontSize="26"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,10" />

                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
                        <StackPanel.Resources>
                            <Style TargetType="Control" x:Key="InputField">
                                <Setter Property="Height" Value="40" />
                                <Setter Property="Margin" Value="0,0,0,15" />
                                <Setter Property="Background" Value="#2A2A2A" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderThickness" Value="1" />
                            </Style>
                        </StackPanel.Resources>

                        <TextBlock Text="Kullanıcı Adı" FontSize="14" Foreground="#CCCCCC" />
                        <TextBox x:Name="UsernameBox" Style="{StaticResource InputField}" BorderBrush="#1DB954" />

                        <TextBlock Text="Şifre" FontSize="14" Foreground="#CCCCCC" />
                        <PasswordBox x:Name="PasswordBox" Style="{StaticResource InputField}" BorderBrush="#8A2BE2" />

                        <Button Content="Giriş Yap"
                                Background="#1DB954"
                                Foreground="Black"
                                FontWeight="Bold"
                                Height="45"
                                BorderBrush="Transparent"
                                Margin="0,10,0,0"
                                Click="LoginButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>