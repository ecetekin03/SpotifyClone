<Window x:Class="MusicPlayerClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MusicPlayer Login"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="550"
        Width="900"
        Background="#121212">

    <Border CornerRadius="20" BorderThickness="1" BorderBrush="#1DB954" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- Başlık çubuğu -->
                <RowDefinition Height="120"/>
                <!-- Üst başlık -->
                <RowDefinition Height="*"/>
                <!-- Giriş -->
            </Grid.RowDefinitions>

            <!-- Sürüklenebilir özel başlık -->
            <Border Grid.Row="0" Background="#181818" MouseDown="Window_MouseDown" CornerRadius="20,20,0,0">
                <DockPanel LastChildFill="False" HorizontalAlignment="Right" Margin="0,0,10,0">
                    <Button Content="⎯"
                            Width="30"
                            Height="30"
                            Click="MinimizeButton_Click"
                            Background="#181818"
                            Foreground="White"
                            BorderBrush="Transparent"/>

                    <Button Content="✕"
                            Width="30"
                            Height="30"
                            Margin="5,0,0,0"
                            Click="CloseButton_Click"
                            Background="#181818"
                            Foreground="White"
                            BorderBrush="Transparent"/>
                </DockPanel>
            </Border>

            <!-- Gradient üst başlık -->
            <Border Grid.Row="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1DB954" Offset="0"/>
                        <GradientStop Color="#8A2BE2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="Hoş Geldiniz"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </Border>

            <!-- Giriş Alanı -->
            <Border Grid.Row="2" Background="#181818" CornerRadius="0,0,20,20">
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Giriş Yap"
                               FontSize="26"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,10"/>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
                        <StackPanel.Resources>
                            <Style TargetType="Control" x:Key="InputField">
                                <Setter Property="Height" Value="40"/>
                                <Setter Property="Margin" Value="0,0,0,15"/>
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Style>
                        </StackPanel.Resources>

                        <TextBlock Text="Kullanıcı Adı" FontSize="14" Foreground="#CCCCCC"/>
                        <TextBox x:Name="UsernameBox" Style="{StaticResource InputField}" BorderBrush="#1DB954"/>

                        <TextBlock Text="Şifre" FontSize="14" Foreground="#CCCCCC"/>
                        <PasswordBox x:Name="PasswordBox" Style="{StaticResource InputField}" BorderBrush="#8A2BE2"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="Kayıt Ol"
                                    Background="#8A2BE2"
                                    Foreground="Black"
                                    FontWeight="Bold"
                                    Height="45"
                                    BorderBrush="Transparent"
                                    Margin="0,0,10,0"
                                    Click="RegisterButton_Click"
                                    Width="154"/>

                            <Button Content="Giriş Yap"
                                    Background="#1DB954"
                                    Foreground="Black"
                                    FontWeight="Bold"
                                    Height="45"
                                    BorderBrush="Transparent"
                                    Click="LoginButton_Click"
                                    Width="162"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
