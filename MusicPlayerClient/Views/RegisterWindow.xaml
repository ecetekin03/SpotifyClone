<Window x:Class="MusicPlayerClient.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MusicPlayer Register"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="650"
        Width="1170"
        Background="#121212">

    <Border CornerRadius="20" BorderThickness="1" BorderBrush="#8A2BE2" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- Başlık çubuğu -->
                <RowDefinition Height="100"/>
                <!-- Üst başlık -->
                <RowDefinition Height="*"/>
                <!-- Giriş alanı -->
            </Grid.RowDefinitions>

            <!-- Sürüklenebilir başlık ve pencere kontrolleri -->
            <Border Grid.Row="0" Background="#181818" MouseDown="Window_MouseDown" CornerRadius="20,20,0,0">
                <DockPanel LastChildFill="False" HorizontalAlignment="Right" Margin="0,0,10,0">
                    <Button Content="⎯"
                            Width="30"
                            Height="30"
                            Click="MinimizeButton_Click"
                            Background="#181818"
                            Foreground="White"
                            BorderBrush="Transparent"/>
                    <Button Content="✕"
                            Width="30"
                            Height="30"
                            Margin="5,0,0,0"
                            Click="CloseButton_Click"
                            Background="#181818"
                            Foreground="White"
                            BorderBrush="Transparent"/>
                </DockPanel>
            </Border>

            <!-- Üst başlık alanı -->
            <Border Grid.Row="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#8A2BE2"/>
                        <GradientStop Offset="1" Color="#1DB954"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="Hesap Oluştur"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </Border>

            <!-- Kayıt giriş alanı -->
            <Border Grid.Row="2" Background="#181818" CornerRadius="0,0,20,20">
                <Grid Margin="40,20,40,40">
                    <!-- Üst margin eklendi -->
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="320">
                        <StackPanel.Resources>
                            <Style TargetType="Control" x:Key="InputField">
                                <Setter Property="Height" Value="40" />
                                <Setter Property="Margin" Value="0,0,0,15" />
                                <Setter Property="Background" Value="#2A2A2A" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderThickness" Value="1" />
                            </Style>
                        </StackPanel.Resources>

                        <TextBlock Text="Ad" FontSize="14" Foreground="#CCCCCC" />
                        <TextBox x:Name="FirstNameBox" Style="{StaticResource InputField}" BorderBrush="#1DB954"/>

                        <TextBlock Text="Soyad" FontSize="14" Foreground="#CCCCCC" />
                        <TextBox x:Name="LastNameBox" Style="{StaticResource InputField}" BorderBrush="#1DB954"/>

                        <TextBlock Text="Kullanıcı Adı" FontSize="14" Foreground="#CCCCCC" />
                        <TextBox x:Name="UsernameBox" Style="{StaticResource InputField}" BorderBrush="#1DB954"/>

                        <TextBlock Text="E-posta" FontSize="14" Foreground="#CCCCCC" />
                        <TextBox x:Name="EmailBox" Style="{StaticResource InputField}" BorderBrush="#1DB954"/>

                        <TextBlock Text="Şifre" FontSize="14" Foreground="#CCCCCC" />
                        <PasswordBox x:Name="PasswordBox" Style="{StaticResource InputField}" BorderBrush="#8A2BE2"/>

                        <Button Content="Kayıt Ol"
                    Background="#1DB954"
                    Foreground="Black"
                    FontWeight="Bold"
                    Height="45"
                    BorderBrush="Transparent"
                    Click="RegisterButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>
